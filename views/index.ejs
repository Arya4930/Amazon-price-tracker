<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Amazon Price Tracker</title>
    <link rel="stylesheet" href="/styles.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <header class="p-2 text-bg-dark">
      <div class="container">
        <div
          class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start"
        >
          <a
            href="/"
            class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none"
          >
            <svg
              class="bi bi-amazon"
              width="40"
              height="32"
              role="img"
              aria-label="Amazon"
            >
              <use xlink:href="#bootstrap"></use>
            </svg>
          </a>

          <ul
            class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0"
          >
            <li><a href="#" class="nav-link px-2 text-secondary">Home</a></li>
            <li><a href="#" class="nav-link px-2 text-white">Features</a></li>
            <li><a href="#" class="nav-link px-2 text-white">FAQs</a></li>
            <li><a href="#" class="nav-link px-2 text-white">About Us</a></li>
          </ul>



            <!-- ADD link Form -->
          <form
            id="trackingForm"
            class="w-50 col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3 d-flex flex-row"
          >
            <input
              type="text"
              class="form-control form-control-dark text-bg-dark me-lg-2"
              placeholder="Enter Product Link"
              aria-label="Amazon"
              id="productLink"
            />
            <button type="button" id="addButton" class="btn btn-warning">
              Add
            </button>
          </form>

          <!-- Add Feedback Display (dont touch) -->
           <div id="feedbackMessage" class="mt-3"></div>
        </div>
      </div>
    </header>

    
    <main class="product-list">
      <% cachedProducts.forEach((product) => { %>
      <div class="card product-card" style="width: 18rem; height: 25rem">
        <!-- Check if the product image is a Base64 string -->
        <% if (product.product_image) { %>
        <img
          class="card-img-top"
          src="<%= product.product_image %>"
          alt="<%= product.name %>"
        />
        <% } else { %>
        <!-- Fallback to default image if no product image -->
        <img
          class="card-img-top"
          src="/sad-pug-dog-rain-sitting-168599983.webp"
          alt="Default Image"
        />
        <% } %>
        <div class="card-body">
          <h5 class="card-title"><%= product.name %></h5>
          <p class="card-text">
            Price (INR): <%= product.price_INR.toLocaleString() %>
          </p>
          <p class="card-text">
            Price (USD): <%= product.price_USD.toLocaleString() %>
          </p>
          <!-- Display the link to the product -->
          <a
            href="<%= product.product_url %>"
            class="btn btn-primary"
            target="_blank"
            >Go to Product</a
          >
        </div>
      </div>
      <% }); %>
    </main>





    <script>
      // Add event listener to the Add button
      document
        .getElementById("addButton")
        .addEventListener("click", async () => {
          const productLink = document.getElementById("productLink").value;
          const feedbackMessage = document.getElementById("feedbackMessage");

          try {
            const response = await fetch("/api/add-tracking", {
              method: "POST",
              headers: {
                "Content-Type": "application/json",
              },
              body: JSON.stringify({ url: productLink }),
            });

            const result = await response.json();
            feedbackMessage.textContent = result.message;
            feedbackMessage.style.color = response.ok ? "green" : "red";
          } catch (error) {
            feedbackMessage.textContent =
              "An error occurred. Please try again.";
            feedbackMessage.style.color = "red";
          }
        });
    </script>
    <script src="../src/backend/functions/addbuttion.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
